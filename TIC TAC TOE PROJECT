#include<iostream.h>
#include<conio.h>
char square[10]={'o','1','2','3','4','5','6','7','8','9'};
void main()
{
start:
clrscr();
//TIC TAC TOE GAME
//SO LETS BEGIN THE GAME
int ch,choice,player=1,i;
char mark,c;
void guide();
int checkwin();
void board();
cout<<"ILCOME TO THE GAME"<<endl;
cout<<"MENU"<<endl;
cout<<"1.Playing guide"<<endl;
cout<<"2.Play game"<<endl;
cout<<"3.exit"<<endl;
cout<<"ENTER Ymy OPTION";
cin>>ch;
switch(ch)
{
case 1:
      guide();
      cout<<"ENTER 'y' TO RETURN TO MAIN MENU";
      cin>>c;
      goto start;

case 2:
       do
       {
     // FOR MAKING BOARD
      board();
      player=(player%2)?1:2;
      cout<<"Player"<<player<<" enter a number";
      cin>>choice;
      mark=(player==1)?'x':'o';
      if(choice==1 && square[1]=='1')
      square[1]=mark;
      else if(choice==2 && square[2]=='2')
      square[2]=mark;
      else if(choice==3 && square[3]=='3')
      square[3]=mark;
      else if(choice==4 && square[4]=='4')
      square[4]=mark;
      else if(choice==5 && square[5]=='5')
      square[5]=mark;
      else if(choice==6 && square[6]=='6')
      square[6]=mark;
      else if(choice==7 && square[7]=='7')
      square[7]=mark;
      else if(choice==8 && square[8]=='8')
      square[8]=mark;
      else if(choice==9 && square[9]=='9')
      square[9]=mark;
      else
      {
      cout<<"Invalid Move";
      player--;
      }
      i=checkwin();
      player++;
      }while(i==-1);
      if(i==1)
      cout<<" PLAYER "<<--player<<" WIN!!!!";
      else
      cout<<" *GAME DRAWN*";
      cout<<"ENTER 'y' TO RETURN TO MAIN MENU"<<endl;
      cin>>c;
      if(c=='y')
      goto start;

case 3:
      cout<<"WOULD YOU SURELY WANT TO EXIT??"<<endl;
       cout<<"PRESS 'y' FOR YES AND 'n' FOR NO"<<endl;
       cout<<"ENTER Ymy CHOICE :"<<endl;

       cin>>c;
       if(c=='y')
       cout<<"**THANKS FOR PLAYING**";
       else
       goto start;
}
getch();
}
